<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".BusinessLogic.MyAccountActivity">

    <!-- Contenedor principal de pestañas -->
    <TabHost android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Distribucion TabWidget y el FrameLayout -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- Seleccion de pestañas -->
            <TabWidget android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@android:id/tabs" />

            <!-- Contenido de las pesatañas) -->
            <FrameLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@android:id/tabcontent" >

                <!-- Pesataña 1 -->
                <RelativeLayout android:id="@+id/Cuenta"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    >

                    <View
                        android:id="@+id/colored_bar"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:background="@color/fsuperior" />
                    <View
                        android:id="@+id/colored_bar2"
                        android:layout_below="@+id/colored_bar"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:background="@color/finferior" />

                    <TextView android:id="@+id/textView1"
                        android:fontFamily="@font/aslgt"
                        android:text="Nombre"
                        android:textColor="@color/cardview_light_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:textSize="35dp"
                        android:gravity="left"/>

                    <TextView
                        android:fontFamily="@font/aslgt"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/textView2"
                        android:textColor="@color/cardview_light_background"
                        android:layout_below="@+id/textView1"
                        android:text="Cedula"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"/>

                    <TextView android:id="@+id/textView3"
                        android:fontFamily="@font/asreg"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/textView2"
                        android:text="Cuenta"
                        android:textSize="20dp"
                        android:layout_marginTop="35dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"/>

                    <TextView android:id="@+id/textView4"
                        android:fontFamily="@font/asreg"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginLeft="10dp"
                        android:layout_below="@+id/textView3"
                        android:textSize="40dp"
                        android:text="Saldo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"/>

                </RelativeLayout>

                <!-- Pesataña 2 -->
                <LinearLayout android:id="@+id/Transacciones"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="442dp" />

                    <CheckedTextView
                        android:id="@+id/checkedTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuenta destino"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="494dp" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="442dp" />

                    <CheckedTextView
                        android:id="@+id/checkedTextView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cantidad a enviar"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="494dp" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="442dp" />

                    <CheckedTextView
                        android:id="@+id/checkedTextView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar contraseña"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="494dp" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="realizar transacción"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="548dp" />

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>